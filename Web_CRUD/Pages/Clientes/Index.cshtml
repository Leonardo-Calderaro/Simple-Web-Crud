
@page

@model Web_CRUD.Pages.Clientes.IndexModel

@{
}

<br />

<h2>Lista de Clientes</h2>

<a class="btn btn-primary btn-sm" href="/Clientes/Adicionar">Adicionar</a>

<table class="table">
    <thread>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Contato</th>
            <th>Endereço</th>
            <th>Data de Criação</th>
            <th>Ação</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model.listaClientes)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nome</td>
                <td>@item.email</td>
                <td>@item.contato</td>
                <td>@item.endereco</td>
                <td>@item.data_cadastro</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clientes/Editar?id=@item.id">Editar</a>
                    <a class="btn btn-danger btn-sm" href="/Clientes/Deletar?id=@item.id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
